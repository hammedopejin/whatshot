<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for settings preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <!-- handles style for DetailActivity Layout-->
    <style name="detailActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:bottom">4dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>
    <style name="locationNameDetailStyle" parent="detailActivityStyle">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textSize">24dp</item>
    </style>

    <!-- handles common list styles for the main view -->
    <style name="itemListStyle">
        <item name="android:layout_marginBottom">@dimen/place_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/place_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/place_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/place_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/place_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/place_vertical_margin</item>
    </style>

</resources>
